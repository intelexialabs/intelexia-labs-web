---
// src/components/sections/HeroWithBg.astro
import Section from '../../ui/Section.astro';
import Button from '../../ui/Button.astro';
import { Image } from 'astro:assets';

// Content
import heroImage from '../../../assets/hero-01.webp';
---

<Section 
  id="hero"
  mode="dark"
  padding="both"
  classes={`relative min-h-[80vh] flex items-center justify-center text-center overflow-hidden`}
  bg={{
    src: heroImage.src,
    width: 1920,
    height: 1080,
    format: 'webp'
  }}
  bgPosition="center"
  bgHeight="100%"
>
  <!-- Contenido principal -->
  <div class="container relative z-10 px-6 mx-auto text-white">
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-6">
      Transformación Digital con<br>
      <span class="text-blue-300">Inteligencia Artificial</span> y<br>
      <span class="text-teal-300">Cloud con Soporte Local</span>
    </h1>

    <p class="text-xl md:text-2xl max-w-3xl mx-auto mb-8 text-teal-100">
      Automatizamos tus procesos con IA y los alojamos en nuestra<br>
      infraestructura para máxima eficiencia y seguridad.
    </p>

    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <Button 
        link="/ia-automatizacion" 
        classes="bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 text-lg"
      >
        Ver IA y Automatización
      </Button>
      
      <Button 
        style="neutral" 
        link="/cloud"
        classes="bg-transparent border-2 border-teal-300 text-teal-300 hover:bg-teal-300/10 px-8 py-3 text-lg"
      >
        Explorar Servicios Cloud
      </Button>
    </div>
  </div>
</Section>



