<script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggle = document.getElementById('pricingType') as HTMLInputElement;
    const pricingTables = document.querySelectorAll('.pricing');
    const monthlyLabel = document.getElementById('monthlyLabel');
    const annualLabel = document.getElementById('annualLabel');

    // Establecer estado inicial
    if (toggle) {
      toggle.checked = false; // Iniciar en mensual
      
      // Aplicar estado inicial a las tablas
      pricingTables.forEach(table => {
        table.classList.add('pricing--monthly');
        table.classList.remove('pricing--annualy');
      });
      
      // Aplicar estado inicial a las etiquetas
      monthlyLabel?.classList.add('text-primary-500');
      annualLabel?.classList.remove('text-primary-500');

      // Manejar cambios
      toggle.addEventListener('change', () => {
        const isAnnual = toggle.checked;
        
        pricingTables.forEach(table => {
          if (isAnnual) {
            // Mostrar precios anuales
            table.classList.remove('pricing--monthly');
            table.classList.add('pricing--annualy');
            monthlyLabel?.classList.remove('text-primary-500');
            annualLabel?.classList.add('text-primary-500');
          } else {
            // Mostrar precios mensuales
            table.classList.remove('pricing--annualy');
            table.classList.add('pricing--monthly');
            monthlyLabel?.classList.add('text-primary-500');
            annualLabel?.classList.remove('text-primary-500');
          }
        });
      });
    }
  });
</script>
