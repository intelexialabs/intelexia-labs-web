import CTA from '../components/blocks/CTA/BasicDark.astro'

// SEO
const SEO = {
	title: 'Intelexia Labs | Servicios de IA y Automatización Empresarial',
	description:
		'Soluciones inteligentes con Inteligencia Artificial y Automatización para potenciar la eficiencia, productividad y crecimiento de tu empresa.'
}

